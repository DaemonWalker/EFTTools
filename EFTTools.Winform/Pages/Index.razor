@page "/"
@inject EFTData eftData
<form onsubmit="return false;">
    <div class="row g-12 align-items-center">
        <div class="col-auto">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" @onchange="@(()=>searchType="0")" checked>
                <label class="form-check-label" for="inlineRadio1">物品Id</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" @onchange="@(()=>searchType="1")">
                <label class="form-check-label" for="inlineRadio2">物品名称</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3" disabled>
                <label class="form-check-label" for="inlineRadio3">3 (disabled)</label>
            </div>
        </div>
        <div class="col-auto">
            <input id="txtSearch" type="text" class="form-control" name="txtSearch" @bind="searchText" required />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="SearchItemById" onsubmit="preventDefault();return false;" type="submit">查询</button>
        </div>
    </div>
</form>
@if (Items != null) {
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>名称</th>
                <th>描述</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items) {
                <tr>
                    <td><NavLink href="@($"/item/{item.Id}")">@item.Id</NavLink></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else {

}

@code {
    public IEnumerable<ItemModel> Items { get; set; } = new List<ItemModel>();
    private string searchText;
    private string searchType = "0";

    private void SearchItemById() {
        if (string.IsNullOrEmpty(searchText)) {
            return;
        }
        if (searchType == "0" && eftData.GetItemInfo(searchText, out var item)) {
            Items = new List<ItemModel>() { item };
        }
        else if (searchType == "1") {
            Items = eftData.SearchItemByName(searchText);
        }
    }
}
